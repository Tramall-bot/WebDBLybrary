@page
@model WebApplication2.Pages.Positions.EditModel

@{
    ViewData["Title"] = "Изменение Поизиции";
}

<h1>Изменить</h1>

<h4>Позицию</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Position.ID" />
            <div class="form-group">
                <label asp-for="Position.PosName" class="control-label"></label>
                <input asp-for="Position.PosName" class="form-control" />
                <span asp-validation-for="Position.PosName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.PosSalary" class="control-label"></label>
                <input asp-for="Position.PosSalary" class="form-control" />
                <span asp-validation-for="Position.PosSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.PosDuties" class="control-label"></label>
                <input asp-for="Position.PosDuties" class="form-control" />
                <span asp-validation-for="Position.PosDuties" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.PosRequirements" class="control-label"></label>
                <input asp-for="Position.PosRequirements" class="form-control" />
                <span asp-validation-for="Position.PosRequirements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
