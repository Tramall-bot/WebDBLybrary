@page
@model WebApplication2.Pages.Publishers.CreateModel

@{
    ViewData["Title"] = "Создание издателя";
}

<h1>Создать</h1>

<h4>Издателя</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Publisher.PubName" class="control-label"></label>
                <input asp-for="Publisher.PubName" class="form-control" />
                <span asp-validation-for="Publisher.PubName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publisher.PubCity" class="control-label"></label>
                <input asp-for="Publisher.PubCity" class="form-control" />
                <span asp-validation-for="Publisher.PubCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publisher.PubAddress" class="control-label"></label>
                <input asp-for="Publisher.PubAddress" class="form-control" />
                <span asp-validation-for="Publisher.PubAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
