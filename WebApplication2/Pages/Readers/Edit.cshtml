@page
@model WebApplication2.Pages.Readers.EditModel

@{
    ViewData["Title"] = "Изменение Читателя";
}

<h1>Изменить</h1>

<h4>Читателя</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reader.ID" />
            <div class="form-group">
                <label asp-for="Reader.RdFullName" class="control-label"></label>
                <input asp-for="Reader.RdFullName" class="form-control" />
                <span asp-validation-for="Reader.RdFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.RdBdDate" class="control-label"></label>
                <input asp-for="Reader.RdBdDate" class="form-control" />
                <span asp-validation-for="Reader.RdBdDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.RdSex" class="control-label"></label>
                <input asp-for="Reader.RdSex" class="form-control" />
                <span asp-validation-for="Reader.RdSex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.RdAddress" class="control-label"></label>
                <input asp-for="Reader.RdAddress" class="form-control" />
                <span asp-validation-for="Reader.RdAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.RdPhoneNumber" class="control-label"></label>
                <input asp-for="Reader.RdPhoneNumber" class="form-control" />
                <span asp-validation-for="Reader.RdPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.RdPassportData" class="control-label"></label>
                <input asp-for="Reader.RdPassportData" class="form-control" />
                <span asp-validation-for="Reader.RdPassportData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
